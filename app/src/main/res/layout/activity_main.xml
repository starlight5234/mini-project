<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="250sp"
            android:src="@drawable/upastithifrost"/>

        <Button
            android:id="@+id/teacher_button"
            android:layout_width="wrap_content"
            android:layout_height="52sp"
            android:paddingHorizontal="36sp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner_login"
            android:text="@string/login_as_teacher"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="36dp" />

        <Button
            android:id="@+id/student_button"
            android:layout_width="wrap_content"
            android:layout_height="52sp"
            android:paddingHorizontal="36sp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner_login"
            android:text="@string/login_as_student"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="30dp" />


    </LinearLayout>

</LinearLayout>